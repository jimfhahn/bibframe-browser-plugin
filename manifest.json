{
  "manifest_version": 2,
  "name": "BIBFRAMinator",
  "version": "1.0",
  "description": "BIBFRAMinate the web",
  "permissions": [
    "activeTab",
    "https://id.bibframe.app/mmsid/*",
    "https://id.bibframe.app/entity/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://find.library.upenn.edu/catalog/*",
        "https://find.library.upenn.edu/?search_field*"
      ],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}